<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flowmate_team5.FileExistsController">
    <children>
        <VBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="25.0" spacing="15.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
            <children>
                <Label text="Configure File Trigger" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label text="Select Folder to Monitor:" />
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="folderPathField" editable="false" prefHeight="25.0" prefWidth="300.0" promptText="No folder selected..." />
                        <Button mnemonicParsing="false" onAction="#handleBrowseFolder" text="Browse Folder..." />
                    </children>
                </HBox>

                <Label text="Enter File Name to Check (e.g. report.pdf):" />
                <TextField fx:id="fileNameField" promptText="example.txt" />

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleConfirm" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" text="Set Trigger" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>