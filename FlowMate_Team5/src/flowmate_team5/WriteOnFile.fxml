<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="350.0" prefWidth="500.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flowmate_team5.WriteOnFileController">
    <children>
        <Pane prefHeight="80.0" prefWidth="500.0" style="-fx-background-color: #3F51B5;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label layoutX="131.0" layoutY="23.0" text="Append Text to File" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <VBox alignment="TOP_CENTER" layoutX="30.0" layoutY="100.0" prefHeight="230.0" prefWidth="440.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="100.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="1. Select the text file (.txt):" textFill="#404040">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <HBox spacing="10.0">
                            <children>
                                <TextField fx:id="pathTextField" editable="false" prefHeight="30.0" prefWidth="320.0" promptText="No file selected..." style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5;" HBox.hgrow="ALWAYS" />
                                <Button mnemonicParsing="false" onAction="#browseButtonPushed" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #e0e0e0; -fx-background-radius: 5;" text="Browse" textFill="#333333" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="2. Enter text to append:" textFill="#404040">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="contentTextField" prefHeight="40.0" prefWidth="440.0" promptText="Type your message here..." style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5;" />
                    </children>
                </VBox>

                <Button mnemonicParsing="false" onAction="#confirmButtonPushed" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3F51B5; -fx-text-fill: white; -fx-background-radius: 20;" text="CONFIRM ACTION">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>