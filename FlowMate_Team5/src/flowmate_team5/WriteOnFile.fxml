<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flowmate_team5.WriteOnFileController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="20.0" prefHeight="260.0" prefWidth="400.0" spacing="15.0">
            <children>
                <Label text="Append Text to File">
                    <font>
                        <Font name="Arial Black" size="18.0" />
                    </font>
                </Label>

                <Label text="Select the text file:" />
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="pathTextField" editable="false" prefHeight="25.0" prefWidth="280.0" promptText="File path..." />
                        <Button mnemonicParsing="false" onAction="#browseButtonPushed" text="Browse" />
                    </children>
                </HBox>

                <Label text="Text to write/append:" />
                <TextField fx:id="contentTextField" prefHeight="25.0" prefWidth="350.0" promptText="Enter the message here..." />

                <Button mnemonicParsing="false" onAction="#confirmButtonPushed" text="Confirm">
                    <font>
                        <Font name="Arial Bold" size="13.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>