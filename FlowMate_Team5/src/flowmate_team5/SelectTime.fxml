<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flowmate_team5.SelectTimeController">
    <children>
        <VBox layoutX="107.0" layoutY="-2.0" prefHeight="400.0" prefWidth="491.0">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/AppLogo.png" />
                    </image>
                </ImageView>
                <TextArea fx:id="Introduction" editable="false" prefHeight="13.0" prefWidth="491.0" promptText="CREATE YOUR RULE!" style="-fx-text-fill: #80c5d9; -fx-border-color: #ffffff;" text="Select the time you want the trigger to fire!">
                    <font>
                        <Font name="Arial Bold" size="12.0" />
                    </font>
                </TextArea>
                <HBox prefHeight="57.0" prefWidth="491.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="59.0" prefWidth="123.0" text="Hour">
                            <font>
                                <Font name="Arial Black" size="12.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="HourDropDownMenu" prefHeight="25.0" prefWidth="159.0" promptText="Select the Hour">
                            <HBox.margin>
                                <Insets left="70.0" top="15.0" />
                            </HBox.margin>
                            <padding>
                                <Insets left="30.0" />
                            </padding>
                        </ComboBox>
                    </children>
                </HBox>
                <HBox prefHeight="57.0" prefWidth="491.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="59.0" prefWidth="123.0" text="Minutes">
                            <font>
                                <Font name="Arial Black" size="12.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="MinutesDropDownMenu" prefHeight="25.0" prefWidth="159.0" promptText="Select the Minute">
                            <HBox.margin>
                                <Insets left="70.0" top="15.0" />
                            </HBox.margin>
                            <padding>
                                <Insets left="30.0" />
                            </padding>
                        </ComboBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                    </VBox.margin>
                </HBox>
                <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmButtonPushed" text="Confirm">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="350.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
        <VBox prefHeight="400.0" prefWidth="108.0" />
    </children>
</AnchorPane>
