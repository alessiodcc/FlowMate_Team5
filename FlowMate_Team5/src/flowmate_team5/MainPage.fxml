<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="flowmate_team5.MainPageController">

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="10"
              style="-fx-padding:10; -fx-background-color:#f4f4f4;">
            <Button text="â‹®"
                    onAction="#toggleSidebar"
                    style="-fx-font-size:18;" />
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <AnchorPane fx:id="sidebar"
                    prefWidth="320"
                    style="-fx-background-color:#ffffff;">
            <ListView fx:id="RuleList"
                      AnchorPane.topAnchor="0"
                      AnchorPane.bottomAnchor="0"
                      AnchorPane.leftAnchor="0"
                      AnchorPane.rightAnchor="0"/>
        </AnchorPane>
    </left>

    <!-- CENTRO -->
    <center>
        <VBox spacing="12"
              alignment="TOP_CENTER"
              style="-fx-padding:20;">

            <Label fx:id="Title"
                   text="FlowMate"
                   style="-fx-font-size:24; -fx-font-weight:bold;" />

            <Label fx:id="Introduction"
                   text="Create your automation rules below."
                   wrapText="true" />

            <TextField fx:id="RuleNameTextArea"
                       promptText="Rule name"
                       maxWidth="300"/>

            <ComboBox fx:id="triggerDropDownMenu"
                      promptText="Select Trigger"
                      maxWidth="300"/>

            <ComboBox fx:id="actionDropDownMenu"
                      promptText="Select Action"
                      maxWidth="300"/>

            <Button fx:id="createRuleButton"
                    text="Create Rule"
                    onAction="#confirmButtonPushed"
                    maxWidth="200"/>
        </VBox>
    </center>

</BorderPane>
