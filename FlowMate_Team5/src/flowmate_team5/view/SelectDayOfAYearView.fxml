<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="flowmate_team5.controllers.SelectDayOfTheYearController">

    <children>
        <VBox spacing="15"
              alignment="CENTER"
              AnchorPane.topAnchor="0"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Title -->
            <Label text="Select Day of the Year"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Year -->
            <Spinner fx:id="yearSpinner"
                     prefWidth="200"/>

            <!-- Month -->
            <ComboBox fx:id="monthComboBox"
                      prefWidth="200"
                      promptText="Select month"/>

            <!-- Day -->
            <Spinner fx:id="daySpinner"
                     prefWidth="200"/>

            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Confirm"
                        onAction="#confirmButtonPushed"/>
                <Button text="Cancel"
                        onAction="#cancelButtonPushed"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
