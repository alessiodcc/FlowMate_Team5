<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450" prefWidth="600"
            xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="flowmate_team5.controllers.SleepingStateController"> <children>

    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               style="-fx-background-color:#f4f6f7;">

        <children>

            <VBox spacing="25" alignment="TOP_CENTER"
                  prefWidth="450"
                  style="-fx-background-color:white;
                             -fx-background-radius:12;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 12, 0, 0, 3);
                             -fx-padding: 30;">

                <ImageView fitHeight="100" preserveRatio="true">
                    <image><Image url="@../images/AppLogo.png"/></image>
                </ImageView>

                <Label text="Rule Sleep Timer"
                       style="-fx-font-size:20px; -fx-font-weight:bold; -fx-text-fill:#2c3e50;" />

                <Label text="Set the duration for which this rule will be temporarily suspended."
                       style="-fx-font-size:12px; -fx-text-fill:#7f8c8d;">
                    <VBox.margin><Insets bottom="10"/></VBox.margin>
                </Label>

                <HBox spacing="30" alignment="CENTER">

                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Days:" style="-fx-font-weight:bold;"/>
                        <Spinner fx:id="daysSpinner"
                                 minWidth="100"
                                 initialValue="0" min="0" max="30" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Hours:" style="-fx-font-weight:bold;"/>
                        <Spinner fx:id="hoursSpinner"
                                 minWidth="100"
                                 initialValue="0" min="0" max="23" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Minutes:" style="-fx-font-weight:bold;"/>
                        <Spinner fx:id="minutesSpinner"
                                 minWidth="100"
                                 initialValue="0" min="0" max="59" />
                    </VBox>

                </HBox>

                <Button fx:id="confirmButton"
                        text="Confirm Suspension"
                        onAction="#confirmButtonPushed"
                        style="-fx-background-color:#e74c3c;
                                   -fx-text-fill:white;
                                   -fx-font-size:14px;
                                   -fx-padding:10 20 10 20;
                                   -fx-background-radius:8;">
                    <VBox.margin><Insets top="15"/></VBox.margin>
                </Button>

            </VBox>

        </children>

    </StackPane>

</children>

</AnchorPane>