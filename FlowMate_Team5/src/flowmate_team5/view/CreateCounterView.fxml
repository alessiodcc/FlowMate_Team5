<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flowmate_team5.controllers.CreateCounterController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <ImageView fitHeight="100.0" preserveRatio="true">
                    <image>
                        <Image url="@../images/AppLogo.png" />
                    </image>
                </ImageView>

                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Create New Counter" />

                <TextArea fx:id="Introduction" editable="false" focusTraversable="false" mouseTransparent="true" prefHeight="40.0" prefWidth="491.0"
                          style="-fx-background-color: transparent; -fx-control-inner-background: white; -fx-text-box-border: transparent; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-padding: 0; -fx-background-insets: 0;"
                          text="Define a new counter by giving it a unique name and an initial integer value." wrapText="true" />

                <VBox alignment="CENTER_LEFT" maxWidth="450.0" spacing="5">
                    <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Counter Name:" />
                    <TextField fx:id="counterNameField" promptText="e.g., MyCounter1"
                               style="-fx-background-radius: 6; -fx-border-color: #bdc3c7; -fx-border-radius: 6; -fx-padding: 10;" />
                </VBox>

                <VBox alignment="CENTER_LEFT" maxWidth="450.0" spacing="5">
                    <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Initial Value (Integer):" />
                    <TextField fx:id="initialValueField" promptText="e.g., 0"
                               style="-fx-background-radius: 6; -fx-border-color: #bdc3c7; -fx-border-radius: 6; -fx-padding: 10;" />
                </VBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button fx:id="ConfirmButton" onAction="#confirmButtonPushed"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 30; -fx-background-radius: 8; -fx-cursor: hand;"
                                text="Confirm!" />

                    </children>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>