<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450" prefWidth="700"
            xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="flowmate_team5.controllers.DeleteFileController"> <children>

    <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
               style="-fx-background-color:#f4f6f7;">

        <children>

            <VBox alignment="TOP_CENTER" spacing="30" prefWidth="500"
                  style="-fx-background-color:white;
                             -fx-background-radius:12;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 12, 0, 0, 3);
                             -fx-padding: 30;">

                <ImageView fitHeight="120" preserveRatio="true">
                    <image><Image url="@../images/AppLogo.png"/></image>
                </ImageView>

                <Label text="Select File Path"
                       style="-fx-font-size:24px; -fx-font-weight:bold; -fx-text-fill:#2c3e50;" />

                <Label text="Specify the file path required for this action or trigger."
                       style="-fx-font-size:12px; -fx-text-fill:#7f8c8d;" />

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="File Path:"
                           style="-fx-font-size:14px; -fx-font-weight:bold; -fx-text-fill:#34495e;" />

                    <TextField fx:id="filePathField"
                               editable="false"
                               promptText="Click 'Browse' to select a file..."
                               HBox.hgrow="ALWAYS" />

                    <Button fx:id="browseButton"
                            text="Browse"
                            onAction="#browseFilePushed"
                            style="-fx-background-color:#7f8c8d;
                                       -fx-text-fill:white;
                                       -fx-font-size:14px;
                                       -fx-padding:10 15 10 15;
                                       -fx-background-radius:8;" />
                </HBox>

                <Button fx:id="confirmButton"
                        text="Confirm Selection"
                        onAction="#confirmButtonPushed"
                        disable="true"  style="-fx-background-color:#3498db;
                                   -fx-text-fill:white;
                                   -fx-font-size:14px;
                                   -fx-padding:10 20 10 20;
                                   -fx-background-radius:8;" />

            </VBox>

        </children>

    </StackPane>

</children>

</AnchorPane>