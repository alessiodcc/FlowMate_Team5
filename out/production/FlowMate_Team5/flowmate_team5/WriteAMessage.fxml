<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flowmate_team5.WriteAMessageController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <ImageView fitHeight="100.0" preserveRatio="true">
                    <image>
                        <Image url="@images/AppLogo.png" />
                    </image>
                </ImageView>

                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Show a Message" />

                <TextArea fx:id="Introduction" editable="false" focusTraversable="false" mouseTransparent="true" prefHeight="40.0" prefWidth="491.0"
                          style="-fx-background-color: transparent; -fx-control-inner-background: white; -fx-text-box-border: transparent; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-padding: 0; -fx-background-insets: 0;"
                          text="Write the message you want to show when the trigger fires!" wrapText="true" />

                <VBox alignment="CENTER_LEFT" maxWidth="500.0" spacing="5">
                    <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Message Content:" />
                    <TextField fx:id="inputText" promptText="Write your text here!" style="-fx-background-radius: 6; -fx-border-color: #bdc3c7; -fx-border-radius: 6; -fx-padding: 10;" />
                </VBox>

                <Button fx:id="ConfirmButton" onAction="#confirmButtonPushed" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 30; -fx-background-radius: 8; -fx-cursor: hand;" text="Confirm!">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>