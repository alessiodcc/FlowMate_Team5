<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450" prefWidth="700"
            xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="flowmate_team5.SelectTimeController">

    <children>

        <!-- Background -->
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                   style="-fx-background-color:#f4f6f7;">

            <children>

                <!-- Main content card -->
                <VBox spacing="30" alignment="TOP_CENTER"
                      prefWidth="500"
                      style="-fx-background-color:white;
             -fx-background-radius:12;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 12, 0, 0, 3);
             -fx-padding: 30;">


                <!-- Logo -->
                    <ImageView fitHeight="120" preserveRatio="true">
                        <image><Image url="@images/AppLogo.png"/></image>
                    </ImageView>

                    <!-- Title -->
                    <Label text="Select Trigger Time"
                           style="-fx-font-size:24px; -fx-font-weight:bold; -fx-text-fill:#2c3e50;" />

                    <Label text="Choose the hour and minute at which this rule will activate."
                           style="-fx-font-size:12px; -fx-text-fill:#7f8c8d;" />

                    <!-- Hour selector -->
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Hour:"
                               style="-fx-font-size:14px; -fx-font-weight:bold; -fx-text-fill:#34495e;" />
                        <ComboBox fx:id="HourDropDownMenu"
                                  prefWidth="150"
                                  promptText="Hour"
                                  stylesheets="@MaterialComboBox.css" />
                    </HBox>

                    <!-- Minute selector -->
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Minutes:"
                               style="-fx-font-size:14px; -fx-font-weight:bold; -fx-text-fill:#34495e;" />
                        <ComboBox fx:id="MinutesDropDownMenu"
                                  prefWidth="150"
                                  promptText="Minutes"
                                  stylesheets="@MaterialComboBox.css" />
                    </HBox>

                    <!-- Button -->
                    <Button fx:id="confirmButton"
                            text="Confirm"
                            onAction="#confirmButtonPushed"
                            style="-fx-background-color:#3498db;
                                   -fx-text-fill:white;
                                   -fx-font-size:14px;
                                   -fx-padding:10 20 10 20;
                                   -fx-background-radius:8;" />

                </VBox>

            </children>

        </StackPane>

    </children>

</AnchorPane>
