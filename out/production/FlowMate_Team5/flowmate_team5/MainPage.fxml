<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="flowmate_team5.MainPageController"
            prefWidth="750" prefHeight="460">

    <children>

        <!-- SIDEBAR RULE LIST -->
        <VBox prefWidth="180" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
              style="-fx-background-color: #fafafa; -fx-border-color: #ddd;">
            <children>
                <Label text="YOUR RULES"
                       style="-fx-text-fill: #C0392B; -fx-font-size: 16px; -fx-font-weight: bold;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </Label>
                <ListView fx:id="RuleList" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>

        <!-- MAIN CONTENT -->
        <VBox spacing="20" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
              alignment="TOP_CENTER">

            <!-- Logo -->
            <ImageView fitHeight="110" preserveRatio="true">
                <image>
                    <Image url="@images/AppLogo.png" />
                </image>
            </ImageView>

            <!-- Title -->
            <Label text="Create your rule"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3498db;" />

            <Label text="Select a Trigger and the Action you want to associate"
                   style="-fx-font-size: 13px; -fx-text-fill: #555;" />

            <!-- Trigger + arrow + Action -->
            <HBox spacing="25"
                  alignment="CENTER">
                <ComboBox fx:id="triggerDropDownMenu" prefWidth="180" promptText="Select trigger"/>

                <ImageView fitWidth="50" preserveRatio="true">
                    <image>
                        <Image url="@images/arrowImage.png"/>
                    </image>
                </ImageView>

                <ComboBox fx:id="actionDropDownMenu" prefWidth="180" promptText="Select action"/>
            </HBox>

            <!-- Rule name + button -->
            <HBox spacing="15" alignment="CENTER">
                <TextField fx:id="RuleNameTextArea" prefWidth="260"
                           promptText="Insert the rule name..." />
                <Button fx:id="createRuleButton" text="Create rule"
                        onAction="#confirmButtonPushed"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;
                               -fx-background-radius: 6;" />
            </HBox>

        </VBox>

    </children>

</AnchorPane>
